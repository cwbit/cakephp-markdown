{
    "name": "cwbit/cakephp-markdown",
    "description": "View Helper for Cake 4.x that enables parsing Markdown into HTML",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "~4.0",
        "erusev/parsedown" : "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Markdown\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Markdown\\Test\\": "tests"
        }
    }
}
